@using EntityLayer.Concrete
@model List<MyProjects>
@foreach (var x in Model)
{
    <div class="col-md-4">
        <a class="text-primary font-weight-bold text-center" href="/MyProjects/ProjectDetails/@x.ProjectID">@x.ProjectName</a>
        <div class="section_1_gallery_grid">
            <a title="Donec sapien massa, placerat ac sodales ac, feugiat quis est." href="@x.ProjectIMG1">
                <div class="">
                    <a href="/MyProjects/ProjectDetails/@x.ProjectID">
                        <img style="min-height:200px;max-height:200px" src="@x.ProjectIMG1" alt=" " class="img-fluid" />
                        <div class="proj_gallery_grid1_pos">
                            <h3>Click for details</h3>
                        </div>
                        <br />
                        <br />
                        <div>
                            <p>
                                @if (x.ProjectText1.Length > 160)
                                {
                                   <a> @x.ProjectText1.Substring(0, 159)</a>
                                    <a>...</a>
                                }
                                else
                                {
                                    @x.ProjectText1
                                }
                            </p>
                        </div>
                        <hr />
                    </a>
                </div>
            </a>
        </div>
    </div>

}